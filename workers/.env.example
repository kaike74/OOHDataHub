# Environment Variables Configuration
# Copy this file to .env and fill in the values
# For Cloudflare Workers, set these as secrets using: wrangler secret put <KEY>

# Master password for initial setup (used in /api/auth/setup)
MASTER_PASSWORD=your_secure_master_password_here

# Default password sent to newly invited users
DEFAULT_USER_PASSWORD=your_secure_default_password_here

# Gmail credentials for sending emails (optional)
GMAIL_CLIENT_EMAIL=your_gmail_service_account@example.com
GMAIL_PRIVATE_KEY=your_private_key_here

# Frontend URL for email links
FRONTEND_URL=https://your-frontend-url.com

# Cloudflare Images (for automatic image optimization)
# Account ID from: Cloudflare Dashboard > Images > Overview
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# API Token from: Cloudflare Dashboard > My Profile > API Tokens
# Requires permission: Account.Cloudflare Images (Edit)
CLOUDFLARE_IMAGES_TOKEN=your_images_api_token_here
